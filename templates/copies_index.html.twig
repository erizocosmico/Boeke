{% extends "base.html.twig" %}

{% block title %}Gestión de ejemplares{% endblock %}

{% block content %}
{% include "sidebar.html.twig" %}
    <div class="col-xs-12 col-sm-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Gestión de ejemplares</h3>
            </div>
            <div class="panel-body">
                <h2>Listado de ejemplares</h2>
                {% if copies %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Libro</th>
                            <th>Asignado a</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for copy in copies %}
                        <tr>
                            <td>{{ copy.codigo }}</td>
                            <td>{{ copy.libro }}</td>
                            <td>{{ copy.alumno }}</td>
                            <td>{{ copy.estado }}</td>
                            <td><button class="btn btn-sm btn-default" onclick="showCopyEditor(this); return false;"><span class="fa fa-edit"></span> Editar</button><br /><button class="btn btn-sm btn-danger" onclick="deleteCopy(this); return false;"><span class="fa fa-times-circle"></span> Borrar</button></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                {% if pagination != '' %}
                <div class="centered">
                    <ul class="pagination">
                        {{ pagination|raw }}
                    </ul>
                </div>
                {% endif %}
                {% else %}
                <div class="alert alert-warning">
                    No hay ningún ejemplar.
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block modal_body %}
<div class="hidden" id="editor-panel">
    <form role="form" class="form-horizontal" onsubmit="return false;">
        <div class="form-group">
            <label for="isbn" class="col-sm-3 control-label">ISBN</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="isbn" name="isbn" placeholder="ISBN del ejemplar...">
            </div>
        </div>
        <div class="form-group">
            <label for="titulo" class="col-sm-3 control-label">Título</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título del ejemplar...">
            </div>
        </div>
        <div class="form-group">
            <label for="autor" class="col-sm-3 control-label">Autor</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="autor" name="autor" placeholder="Autor del ejemplar...">
            </div>
        </div>
        <div class="form-group">
            <label for="anio" class="col-sm-3 control-label">Año de publicación</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="anio" name="anio" placeholder="Año de publicación...">
            </div>
        </div>
        <div class="form-group">
            <label for="asignatura" class="col-sm-3 control-label">Asignatura</label>
            <div class="col-sm-9">
                <select id="asignatura">
                </select>
            </div>
        </div>
    </form>
</div>
<div class="hidden" id="delete-panel">
</div>
{% endblock %}

{% block modal_footer %}
<div class="hidden" id="editor-actions">
    <button id="create-button" class="btn btn-primary">Crear ejemplar</button> <button id="cancel-create" class="btn btn-default">Cancelar</button>
</div>
<div class="hidden" id="delete-actions">
    <button id="delete-button" class="btn btn-danger">Borrar ejemplar</button> <button id="cancel-delete" class="btn btn-default">Cancelar</button>
</div>
{% endblock %}