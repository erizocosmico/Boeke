<script type="text/javascript">
    window.addEventListener('DOMContentLoaded', function() {
        copiesLendingInit();
    });
</script>
<form role="form" class="form-horizontal" method="POST" action="{{ urlFor('copies_lending') }}">
    {% if flash['error'] %}
        <div class="alert alert-danger" id="lend-backend-error">
            {{ flash['error']|raw }}
        </div>
    {% endif %}
    {% if flash['success'] %}
        <div class="alert alert-success" id="lend-backend-success">
            {{ flash['success']|raw }}
        </div>
    {% endif %}
    <div class="alert alert-danger hidden" id="lending-alert-box"></div>

    <div class="form-group">
        <label for="alumno" class="col-sm-3 control-label">Alumno</label>
        <div class="col-sm-9">
            <select class="form-control" id="lending-student" name="alumno">
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="nivel" class="col-sm-3 control-label">Nivel</label>
        <div class="col-sm-9">
            <select class="form-control" id="lending-level" name="nivel">
            </select>
        </div>
    </div>

    <table class="table table-bordered hidden" id="books-table">
        <thead>
            <th>Asignatura</th>
            <th>Libro</th>
            <th class="text-center">Entregar</th>
        </thead>
        <tbody>
        </tbody>
    </table>

    <div class="form-group text-center">
        <button type="submit" id="lending-submit-button" disabled="true" class="btn btn-primary">Entregar lote</button>
    </div>
    <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
</form>
