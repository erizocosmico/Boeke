{% extends "base.html.twig" %}

{% block title %}Entrar{% endblock %}

{% block content %}
<div class="container col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Entrar</h3>
        </div>
        <div class="panel-body">
            <form role="form" method="POST" action="{{ action }}">
                {% if flash['error'] %}
                <div class="alert alert-danger">
                    {{ flash['error'] }}
                </div>
                {% endif %}
                
                <div class="form-group">
                    <label for="username"><span class="fa fa-user"></span> Nombre de usuario</label>
                    <input type="text" class="form-control" name="username" id="username" placeholder="Introduce nombre de usuario..." required>
                </div>
                <div class="form-group">
                    <label for="password"><span class="fa fa-key"></span> Contraseña</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Introduce tu contraseña..." required>
                </div>
                <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
                <button type="submit" class="btn btn-primary center-block">Conectarse</button>
            </form>
        </div>
        <div class="panel-footer">
            Contacte con el administrador en caso de no poder acceder.
        </div>
    </div>
</div>
{% endblock %}