{% extends "base.html.twig" %}

{% block title %}{% if editing %}Editar{% else %}Nuevo{% endif %} usuario &mdash; Gestión de usuarios{% endblock %}

{% block content %}
{% include "sidebar.html.twig" %}
    <div class="col-xs-12 col-sm-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Gestión de usuarios</h3>
            </div>
            <div class="panel-body">
                <a href="{{ urlFor('users_index') }}" class="btn btn-default pull-left"><span class="fa fa-chevron-left"></span> Ir al listado</a>
                <div class="clearfix"></div>
                <h2>{% if editing %}Editar{% else %}Nuevo{% endif %} usuario</h2>
                <form role="form" class="form-horizontal" method="POST" action="{% if editing %}{{ urlFor('users_edit', {'id' : user_id}) }}{% else %}{{ urlFor('users_new') }}{% endif %}">
                    {% if flash['error'] %}
                    <div class="alert alert-danger">
                        {{ flash['error']|raw }}
                    </div>
                    {% endif %}
                    {% if flash['success'] %}
                    <div class="alert alert-success">
                        {{ flash['success']|raw }}
                    </div>
                    {% endif %}
                    <div class="form-group">
                        <label for="nombre_usuario" class="col-sm-3 control-label">Nombre de usuario</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="nombre_usuario" name="nombre_usuario" placeholder="Nombre de usuario..." value="{{ nombre_usuario }}">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="nombre_completo" class="col-sm-3 control-label">Nombre completo</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="nombre_completo" name="nombre_completo" placeholder="Nombre completo..." value="{{ nombre_completo }}">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="usuario_pass" class="col-sm-3 control-label">Contraseña</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="usuario_pass" name="usuario_pass" placeholder="Contraseña...{% if editing %} Deja este campo en blanco para mantener la anterior...{% endif %}">
                        </div>
                    </div>
                
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="es_admin" id="es_admin" value="1" {% if es_admin %}checked{% endif %}> ¿Es administrador?
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-primary">{% if editing %}Editar{% else %}Crear{% endif %} usuario</button> <button type="reset" class="btn btn-default">Limpiar</button>
                        </div>
                    </div>
                    <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
                </form>
            </div>
        </div>
    </div>
{% endblock %}